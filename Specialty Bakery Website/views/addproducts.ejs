<%- include ('partials/header') %>
<div class="container">
<h1> New Product </h1>

<form action="/" enctype="multipart/form-data" method="POST">

<div class="form-group">
	<input type="text" name="name" class="form-control" placeholder="name" required>
</div>
 <div class="form-group">
	<input type="text" name="category" class="form-control" placeholder="category" required>
</div>
<div class="form-group">
	<input type="text" name="price" class="form-control" placeholder="Price" required>
</div>
<div class="form-group">
	<input type="text" name="quantity" class="form-control" placeholder="Quantity" required>
</div>
<div class="form-group">
<input type="file" name="product"/> required<br>
</div>
<div class="form-group">
	<input type="text" name="image" class="form-control" placeholder="image name" required>
</div>

<div class="form-group">
	<input type="text" name="flag" class="form-control" placeholder="Available product for user" required>
</div>

 <div class="form-group">
	<textarea name="description" class="form-control" placeholder="description" required></textarea>
</div>
<div class="form-group">
	<button type="submit" class="btn btn-info">Save</button>
</div>


</form>

<a href="/">Cancel</a>

</div>

<%- include ('partials/footer') %>